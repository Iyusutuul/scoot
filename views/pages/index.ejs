<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width">
        <link rel="stylesheet" href="styles/login.css">
        <title>Login Crata</title>
    </head>
    <style>
        .button {
          display: inline-block;
          padding: 10px 10px;
          color: white;
          text-align: center;
          text-decoration: none;
          border-radius: 5px;
          transition: transform 0.2s ease;
        }
        
        .button:hover {
          transform: scale(1.1);
          background-color: red;
        }
        </style>
<body>
    <div id="header">
        <div style="background-color: #0093E9;
        background-image: linear-gradient(160deg, #133950 0%, #19ddc6 20%);" class="rect_2"></div>
                <div style="background: orangered; border-radius: 10px;" class="rect_3"></div>
                <h3 href="#"class="formheading">&#160&#160&#160Crata&#160&#160&#160<i 
                    style=" padding-bottom: -200px; margin-top:-100px; margin-left: -12px;;
                    background-color: orangered;border-radius: 10px;color:
                  white;">&#160</i><span><i style="color: rgb(232, 56, 46);"></i>
                </h3>
            </div>
            
    <div class="contain">                  
        <nav>
            <ul>
                <li><a style="position:absolute; margin: -30px 0px 0px -120px" href="/signup">Sign Up</a></li>
                <li><a style="position:absolute; margin: -30px 0px 0px 0px" href="/indexAdmin">Admin</a></li>
            </ul>  
        </nav>
        <div> 
        <% if (message) {%>
            <div class="alert_error"><%= message %></div>
        <% } %>
        <% if (message_success) {%>
            <div class="alert_success"><%= message_success %></div>
        <% } %>
    </div> 
    <!-- <h3 style="color: whitesmoke; font-size: 25px;margin-left: -475px;margin-top: 55px ;">Login</h3> -->
   <form action="/dashboard" method="POST"> 
    <div class="loginform">              
        <div class="container">
            <div class="inputs">
                <label for="email">
                    <input style="margin-top: 40px;" type="email"
                    id="email" name="email" required="" maxlength="64" placeholder="Email" 
                    >
                    </label></div>
                <div>
            <label for="password"><b></b>
                <input type="password" name="password" id="password" required="" 
                placeholder="Password" minlenth="4" 
                onfocus="this.value = this.value=='Password'?'':this.value;" 
                onblur="this.value = this.value==''?'Password':this.value;">
                </label></div>
            </div>
        <div class="login_button">
            <input class="button" style="
                padding: 15px 0px;
                background-color:  orangered;
                border-radius: 20px;
                border: 1px solid rgb(120, 33, 1);
                color: white;
                cursor: pointer;
                font-size: 18px;
                font-weight: 300" type="submit" value="Sign In">
            </div><br><br><br><br>
            <div style ="margin-top: -20px;
                        font-size:85%; color: white">
                        Dont have an account?&#160 Click Sign Up!
                        </div>
                    </div>
                </div>
                <%- include('../partials/scripts'); %>
           
            </div>
        </form>
        <script>
            $(document).ready(function() {
              setTimeout(function() {
                $('.alert_error').fadeOut('slow');
              }, 3000); // Adjust the time as needed
            });
          </script>
    </body>
</html>