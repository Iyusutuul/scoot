    <div class="pusher">
        <div style="background-color: black;" class="grid-wrapper">
                <style>
                    /* Your custom styles as already provided */
                </style>
                <div>
                <div id="submissionsTableWrapper">
                    <table id="submissionsTable">
                        <thead>
                            <tr>
                                <th>S/N</th>
                                <th>Terminal ID</th>
                                <th>Merchant Name</th>
                                <th>Phone</th>
                                <th>Merchant Address</th>
                                <th>Image_Url</th>
                                <th>Status</th> <!-- Current Status Column -->
                                <th>Upload</th>
                                <th>Action</th>
                                <th>Approval</th>  
                            </tr>
                        </thead>
                    <tbody>
                <% submissions.forEach((submission, index) => { %>
            <form action="/update_roadmap" method="POST" enctype="multipart/form-data" id="form_<%= index %>">
                <!-- Loop through the submissions passed from the backend -->
                            
                    <tr id="row_<%= index %>">
                    <td> <%= index + 1 %> </td>
                    <td style="display: none;" data-id="<%= submission.id %>"> <%= submission.id %> </td>
                    <td> <%= submission.terminal_id %> </td>
                    <td style="white-space: nowrap;"> <%= submission.merchant_name %> </td>
                    <td> <%= submission.phone %> </td>
                    <td style="white-space: nowrap;"> <%= submission.address %> </td>
                    <!-- Current Status column -->
                    <td class="status">
                                        <%= submission.status %> <!-- Current status value -->
                                    </td>
                               
                                    <td class="status"> <!-- Dropdown column for approval status -->
                                        <select name="status" id="status_<%= index %>">
                                            <option value="pending" <%= submission.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                                            <option value="ok" <%= submission.status === 'OK' ? 'selected' : '' %>>OK</option>
                                            <option value="nok" <%= submission.status === 'NOK' ? 'selected' : '' %>>NOK</option>
                                            <option value="ad" <%= submission.status === 'AD' ? 'selected' : '' %>>AD</option>
                                            <option value="hf" <%= submission.status === 'HF' ? 'selected' : '' %>>HF</option>
                                        </select>
                                    </td>
                                    <input type="hidden" name="id" id="idInput" value="<%= submission.id %>" />
                            <td class="upload-cell">
<input type="file" name="image" id="imageUpload_<%= index %>" class="input-files" accept="image/*" 
                        />
                        </td>
                            <td class="submit-cell">
                                <button type="submit" class="submit_btn" <%= submission.submitted ? 'disabled' : '' %>>Submit</button>
                                    </td>
                                </form>
                                <td class="action-cell">
                                    <div style="background-color: rgba(220, 220, 220, 0.178);"  class="pre_approval_icon" onclick="approveSubmission(2)">
                                    <i style="color: #FFBF00;background: transparent;" class="fa-solid fa-circle"></i></div>
                                    <div style="display: none" class="approve-btn" onclick="approveSubmission(2)"><i class="fa-solid fa-check"></i></div>
                                    <div style="display: none;" class="reject-btn" onclick="rejectSubmission(2)"><i class="fa-solid fa-xmark"></i></div>
                                </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </form>
