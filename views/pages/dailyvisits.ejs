<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/semantic-ui/2.2.4/semantic.min.css">
    <script src="https://cdn.jsdelivr.net/semantic-ui/2.2.4/semantic.min.js"></script>
    <title>Crata-New Visit</title>
            <link rel="stylesheet" href="styles/visit_main.css" type="text/css" media="all">
    <style>
        .error { color: red; }
        div.preview-images > img {
            width: 70%;
            height: 60%;
            margin-top: -450px;
            margin-left: 450px;
            position: relative;
        }
        #progressBar {
            width: 100%;
            height: 20px;
            background-color: #f3f3f3;
            margin-top: 20px;
        }
        #progressBar div {
            height: 100%;
            background-color: #fefeef;
            text-align: center;
            line-height: 20px;
            color: white;
        }
        .button {
          display: inline-block;
          padding: 10px 10px;
          color: white;
          text-align: center;
          text-decoration: none;
          border-radius: 5px;
          transition: transform 0.2s ease;
        }
        
        .button:hover {
          transform: scale(1.1);
        }
    </style>
</head>
<body>
<header>
    <%- include('../partials/header2'); %>
</header>
<div id="header">
    <div class="contain">
        <nav>
            <ul>
                <li><a href="#">Roadmap</a></li>
                <li><a href="/viewpending">Pending Tasks</a></li>
                <li><a href="/capture">Data Capture</a></li>
                <li style="border-bottom: 2px solid orange;"><a style="color: white" href="/visits ">Task Submission</a></li>
                <li><a href="">Wallet</a></li>
                <li><a href=" /profile">Profile</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>
    </div>
</div>
        <% if (msg_success) { %>
            <div class="alert_success"><%= msg_success %></div>
        <% } %>
        <!-- FORM BEGINS HERE-->
        <form action="/visits" method="POST" enctype="multipart/form-data">
            <% if (msg_success) { %>
                <div class="alert_success"><%= msg_success %></div>
            <% } %>
            <div class="loginform">
                <div class="inputs">
                    <div>
                        <label for="merchant_name"></label>
                        <input type="text" id="merchant_name" name="merchant_name" required maxlength="50" placeholder="Merchant Name">
                        <div class="error" id="merchant_name_error"></div>
                    </div>
                    <div>
                        <label for="merchant_address"></label>
                        <input type="text" id="merchant_address" name="merchant_address" required minlength="15" maxlength="40" placeholder="Merchant Address">
                        <div class="error" id="merchant_address_error"></div>
                    </div>
                    <div>
                        <label for="terminal_id"></label>
                        <input type="text" id="terminal_id" name="terminal_id" required maxlength="10" placeholder="Terminal ID">
                        <div class="error" id="terminal_id_error"></div>
                    </div>
                    <div>
                        <label for="status"></label>
                        <input type="text" id="status" name="status" required maxlength="10" placeholder="Status(1- OK, 2- NOK, 3-RET, 4-DENIED, 5-NAL)">
                        <div class="error" id="status_error"></div>
                    </div>
                    <div>
                        <!--  
                        <label for="Tags"></label>
                        <select name="tags" id="tags" required>
                            <option value="cal_pdo1">cal_pdo1</option>
                            <option value="phc_pdo1">phc_pdo1</option>
                            <option value="lag_pdo1">cal_pdo1</option>
                        </select>
                        -->
                        <div class="field">
                            <div id ="tag" 
                              class="ui fluid multiple search selection dropdown" 
                              style="height: 10px !important;" >
                              <input name="tags" type="hidden"> <i class="dropdown icon"></i>
                              <div class="default text">Tags</div>
                              <div class="menu">
                                <div class="item" data-value="cal_pdo1">cal_pdo1</div> 
                                <div class="item" data-value="phc_pdo1">phc_pdo1</div>
                              </div>
                            </div>
                          </div>
                    <div>
                        <label for="image_url"></label>
                        <input type="hidden" id="image_url" name="image_url" placeholder="PDO_Reference">
                        <div class="image_url" id="image_url"></div>
                    </div>
                    <div class="field">
                      <label></label>                                  
                      <section class="section">
                        <div>
                            <label style="color:white;" for="image">Upload image:</label>
                            <input type="file"  name="image" class="input-files" accept="image/*"  id="fileInput">
                            <div class="error" id="fileInput_error"></div>
                            <progress id="progressBar" value="0" max="100" style="width: 100%;"></progress>
                        </div>
                    <button class="button" type="submit">Post</button>
                </div>
            </div>
        </form>
        <div class="row">
            <div class="col-sm-12">
                <div class="preview-images"></div>
            </div>
        </div>
    </div>
    <%- include('../partials/scripts'); %>
    </div>
<script>
    $('#tag').dropdown({
        allowAdditions: false
    });

        // Flash message fade out
        setTimeout(function() {
            $('.alert_success').fadeOut('slow');
            $('.alert_error').fadeOut('slow');
        }, 3000); // Adjust the time as needed

</script>
</body>
</html>

