<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cloudinary Test</title>
    <script src="https://product-gallery.cloudinary.com/latest/all.js" type="text/javascript">
    </script>  

</head>
<style>
    #myGallery {
        border: aqua;
        
    }
    #myGallery .cld-gal-item img {
        object-fit: cover; /* Ensure images cover their containers */
</style>
<body style="background-color: black;" >

    <div id="myGallery" style="max-width:50%;max-height: 50%"></div>
    <script type="text/javascript">  
    const myGallery= cloudinary.galleryWidget({
      container: "#myGallery",
      cloudName: "iyu",
      default: {    
                    theme:  'default' // or 'minimal' based on your preference
                },
      mediaAssets: [ {tag: "cal_pdo001"} // by default mediaType: "image"
]
});

    
    myGallery.render();
    </script>
</body>
</html>
