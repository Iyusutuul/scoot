                    <div  class="column">
                <div style="max-width:100px; max-height: 250px;" class="ui card">
            <div  class="image">
        <img src="<%= post.url %>" style="max-height:250px;">
    </div>
        <div  class="content">
            <a  class="header"><%= post.public_id %></a>
                <div class="meta">
                    <span class="date">
                        <i class="calendar icon"></i>
