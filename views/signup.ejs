<html>
    <head>
        <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width">
            <link rel="stylesheet" href="styles/signup.css">
        <title>Arhena Sign Up</title>
    </head>
<body>
    <div id="header">
        <div style="background-color: #0093E9;
        background-image: linear-gradient(160deg, #133950 0%, #19ddc6 100%);" class="rect_2"></div>
                <div style="background: orangered; border-radius: 10px;" class="rect_3"></div>
                <h3 href="#"class="formheading">&#160&#160&#160Crat a&#160&#160&#160<i style="padding-bottom: -20px; margin-top:-100px; margin-left: -12px;;
                background-color: orangered;border-radius: 10px;color:
                 white;">&#160</i><span><i style="color: rgb(232, 56, 46);"></i>
                </h3>
            </div>
    <div class="contain">                  
        <nav>
            <ul>
                <!-- <li><a style="position:absolute; margin: -40px 0px 0px 50px" href="/login">Log In</a></li> -->
            </ul>  
        </nav>
    </div> 
<form action="/signup" method="POST">   
    <div> 
        <% if (message) {%>
            <div class="alert_error"><%= message %></div>
        <% } %>
        <% if (message_success) {%>
            <div class="alert_success"><%= message_success %></div>
        <% } %>
    </div> 
    <div class="loginform">              
        <div class="container">
            <div class="inputs">
                <div>
                    <label for="firstname">
                        <input style="margin-top: -50px;" type="text"
                        id="firstname" name="firstname" required="" maxlength="20" placeholder="First Name" >
                        </label>
                            </div>
                                <div>
                            <label for="lastname">
                        <input style="margin-top: -10px;" type="text" id="lastname" 
                    name="lastname" required="" maxlength="20" placeholder="Last Name" >
                </label>
            </div>
        <div>
            <label for="location">
                <input style="margin-top: 0px;" type="text" id="location" 
                    name="location" required="" maxlength="25" placeholder="Location" >
                        </label>
                            </div>
                                <div>
                                <label for="mobile_num">
                            <input style="margin-top: 20px;" type="tel"
                        id="mobile_num" name="mobile_num" maxlength="11" placeholder="Mobile_Number" required>
                    </label>
                </div>
            <div>
                <label for="email">
                    <input style="margin-top: 0px;" type="email"
                        id="email" name="email" required="" maxlength="64" placeholder="Email">
                            </label>
                                </div>
                                <div>
                            <label for="dispatcher_id">
                        <input style="margin-top: 20px;" type="text"
                    id="dispatcher_id" name="dispatcher_id"  maxlength="11" placeholder="NIN Number" required>
                </label>
            </div>
                <div>                                                  
                    <label for="password"><b></b>
                        <input type="password" name="password" id="password" required
                            placeholder="Password" minlenth="4" 
                                onfocus="this.value = this.value=='Password'?'':this.value;" 
                                onblur="this.value = this.value==''?'Password':this.value;">
                                </label>
                            </div>                         
                        <label for="confirm_password"><b></b>
                    <input type="password" name="confirm_password" id="confirm_password" required
                    placeholder="Confirm Password" placeholder="enter password again" minlenth="4">
                </label>
            </div>
        <div class="login_button">
            <input type="submit" value="Begin your Journey">
                </div><br><br>  <br>
                    <!-- <div style ="
                        font-size:85%; color: white"><br>
                        Already have an account? Click Log In!
                        </div> -->
                    </div>
                </div>
            </div>
        </form>
    </body>
</html>